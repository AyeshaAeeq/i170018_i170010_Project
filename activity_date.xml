<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f07d00"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".DateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:layout_gravity="right|bottom"
                      android:layout_marginTop="20dp"
                      android:layout_marginLeft="10dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:backgroundTint="#f07d00"
                      android:id="@+id/back"
                      app:srcCompat="@drawable/ic_baseline_chevron_left_24"
                      />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="150dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Choose a date"
                android:textColor="#FDFFFF"
                android:textSize="26dp"
                app:layout_constraintHorizontal_bias="0.203"
                app:layout_constraintLeft_toRightOf="@+id/back"
                app:layout_constraintRight_toRightOf="@+id/profile"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                      android:id="@+id/profile"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="40dp"
                      android:layout_marginBottom="620dp"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="@+id/ll"
                      android:tint="#D8E6E5"
                      android:tooltipText="@string/app_name"
                app:srcCompat="@drawable/ic_baseline_person_24"
                      app:backgroundTint="#d10027"
                      tools:ignore="MissingConstraints" />
                  <LinearLayout
                      android:id="@+id/ll"
                      android:layout_width="match_parent"
                      android:layout_height="550dp"
                      android:layout_alignParentBottom="true"
                      android:layout_gravity="center"
                      android:layout_marginBottom="36dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginTop="70dp"
                      android:layout_marginLeft="20dp"
                      android:background="@drawable/back"
                      android:orientation="vertical"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      tools:ignore="MissingConstraints">

                      <TextView
                          android:id="@+id/tv"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_marginTop="100dp"
                          android:layout_marginLeft="45dp"
                          android:textAlignment="center"
                          android:fontFamily="sans-serif-condensed"
                          android:text="Choose a date"
                          android:textColor="#1C1E1E"
                          android:textSize="26dp"
                          />
                      <TextView
                          android:id="@+id/tv1"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_marginTop="10dp"
                          android:layout_marginLeft="100dp"
                          android:textAlignment="center"
                          android:text="click to change"
                          android:textColor="#d10027"
                          android:textSize="15dp"

                          />

                  </LinearLayout>
                  <Button
                      android:id="@+id/start"
                      android:layout_width="200dp"
                      android:text="Start attendance"
                      android:textColor="#FDFFFF"
                      android:layout_height="wrap_content"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:layout_marginBottom="100dp"
                      android:tint="#D8E6E5"
                      app:backgroundTint="#d10027"
                      app:layout_constraintBottom_toBottomOf="parent"
                     />
                  <Button
                      android:id="@+id/edit"
                      android:layout_width="200dp"
                      android:text="Edit attendance"
                      android:textColor="#FDFFFF"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="55dp"
                      android:tint="#D8E6E5"
                      app:backgroundTint="#FF5722"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                     />

              </androidx.constraintlayout.widget.ConstraintLayout>
          </RelativeLayout>

      </androidx.constraintlayout.widget.ConstraintLayout>
